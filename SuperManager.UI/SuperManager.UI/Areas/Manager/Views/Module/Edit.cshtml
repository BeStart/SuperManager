@using SuperManager.MODEL
@model DBModuleModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage.cshtml";
}

<div class="operater">
    <form action="@Url.Action(Model != null ? "EditOperater" : "AddOperater", new { identityID = (Model != null ? Model.IdentityID : 0) })" class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label style="width:100px;text-align:left;font-weight:normal;" class="col-xs-2 control-label">模块编号：</label>
            <div class="col-xs-10" style="padding-left : 0px;">
                <input class="form-control" style="width:200px;" type="text" name="moduleCode" value="@Html.Raw(Server.HtmlEncode(Model != null ? Model.ModuleCode : ""))" />
            </div>
        </div>
        <div class="form-group">
            <label style="width:100px;text-align:left;font-weight:normal;" class="col-xs-2 control-label">模块名称：</label>
            <div class="col-xs-10" style="padding-left : 0px;">
                <input class="form-control" style="width:200px;" type="text" name="moduleName" value="@Html.Raw(Server.HtmlEncode(Model != null ? Model.ModuleName : ""))" />
            </div>
        </div>
        <div class="form-group">
            <label style="width:100px;text-align:left;padding-top:0px;font-weight:normal;" class="col-xs-2 control-label">动作列表：</label>
            <div class="col-xs-10" style="padding-left : 0px;">
                <div class="checkbox-inline forbidden-text-select" style="padding-top:0px;">
                    @if (ViewBag.ActionTypeList != null && ViewBag.ActionTypeList.Count > 0)
                    {
                        foreach (DBActionTypeModel modelItem in ViewBag.ActionTypeList)
                        {
                            <label style="display:inline-block;margin-right:45px;font-weight:normal;margin-bottom:0px;"><input type="checkbox" name="actionList" value="@modelItem.TypeCode" @Html.Raw(DataHelper.IsContains(modelItem.TypeCode, Model != null ? Model.ActionList : "") ? "checked=\"checked\"" : "") />@Html.Raw(Server.HtmlEncode(modelItem.TypeName))</label>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <span style="padding-left:100px;">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-saved" style="font-size:12px;padding-right : 10px;"></i>保存</button>
                <a class="btn btn-warning" style="margin-left:10px;" href="@Url.Action("List")"><i class="glyphicon glyphicon-share-alt" style="padding-right:10px;"></i>返回模块管理</a>
            </span>
        </div>
    </form>
</div>


